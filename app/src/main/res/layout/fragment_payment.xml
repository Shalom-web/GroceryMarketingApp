<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_placeholder_select" />

                    <com.hello.gemp.GoEasyMarketPlace.customfonts.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adderss"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_credit_card" />

                    <com.hello.gemp.GoEasyMarketPlace.customfonts.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment"
                        android:textColor="@color/Tex"

                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_confirm_unselect" />

                    <com.hello.gemp.GoEasyMarketPlace.customfonts.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirm"
                        android:textColor="@color/subtext"
                        android:textSize="14dp" />
                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

        <RadioGroup
            android:id="@+id/payment_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/card_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:checked="true"
                android:text="MOMO PAYMENT" />

            <RadioButton
                android:id="@+id/cash_on_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="ORANGE MONEY PAYMENT" />

        </RadioGroup>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <FrameLayout
                    android:id="@+id/card_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <com.hello.gemp.GoEasyMarketPlace.customfonts.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:text="NUMBER"
                            android:textColor="@color/lightgrey"
                            android:textSize="@dimen/text" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">


                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:backgroundTint="@color/lightgrey" />

                            <com.hello.gemp.GoEasyMarketPlace.customfonts.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="16dp"
                                android:layout_weight="1"
                                android:text="675 *** *** 456 ***" />



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="16dp"
                                android:layout_weight="1.9"
                                android:gravity="right">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="22dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/mtn"

                                    />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp" />

                            <com.hello.gemp.GoEasyMarketPlace.customfonts.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="16dp"
                                android:layout_weight="1"

                                android:text="690 ***   567   ***" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="16dp"
                                android:layout_weight="1.9"
                                android:gravity="right">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="22dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/money"

                                    />
                            </LinearLayout>


                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="135dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="135dp"
                            android:background="@color/lightgrey"></View>


                        <com.hello.gemp.GoEasyMarketPlace.customfonts.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:text="MOMO NUMBER"
                            android:textColor="@color/material_blue_grey_90"
                            android:textSize="@dimen/text" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:background="@drawable/bg_ccv"
                            android:orientation="horizontal"
                            android:padding="13dp">


                            <com.hello.gemp.GoEasyMarketPlace.customfonts.MyEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="#00000000"
                                android:focusable="true"
                                android:hint="ENTER NUMBER"
                                android:inputType="number"
                                android:lines="1"
                                android:maxLength="20"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textColor="@color/text"
                                android:textColorHint="@color/lightgrey"
                                android:textSize="@dimen/text" />


                            <!--********you have to code at java side to detect perticular card (visa, mastercard or else)********-->

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="22dp"
                                android:layout_gravity="center"
                                android:src="@drawable/mtn" />


                        </LinearLayout>




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:background="@drawable/bg_ccv"
                            android:orientation="horizontal"
                            android:padding="14dp">


                            <com.hello.gemp.GoEasyMarketPlace.customfonts.MyEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="#00000000"
                                android:focusable="true"
                                android:hint="NAME"
                                android:lines="1"
                                android:maxLength="25"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textColor="@color/text"
                                android:textColorHint="@color/lightgrey"
                                android:textSize="@dimen/text" />


                        </LinearLayout>

                        <com.hello.gemp.GoEasyMarketPlace.customfonts.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:text="ORANGEMONEY NUMBER"
                            android:textColor="@color/material_blue_grey_90"
                            android:textSize="@dimen/text" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:background="@drawable/bg_ccv"
                            android:orientation="horizontal"
                            android:padding="13dp">


                            <com.hello.gemp.GoEasyMarketPlace.customfonts.MyEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="#00000000"
                                android:focusable="true"
                                android:hint="ENTER NUMBER"
                                android:inputType="number"
                                android:lines="1"
                                android:maxLength="20"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textColor="@color/text"
                                android:textColorHint="@color/lightgrey"
                                android:textSize="@dimen/text" />


                            <!--********you have to code at java side to detect perticular card (visa, mastercard or else)********-->

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="22dp"
                                android:layout_gravity="center"
                                android:src="@drawable/money"/>


                        </LinearLayout>




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="16dp"
                            android:background="@drawable/bg_ccv"
                            android:orientation="horizontal"
                            android:padding="14dp">


                            <com.hello.gemp.GoEasyMarketPlace.customfonts.MyEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="#00000000"
                                android:focusable="true"
                                android:hint="NAME"
                                android:lines="1"
                                android:maxLength="25"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textColor="@color/text"
                                android:textColorHint="@color/lightgrey"
                                android:textSize="@dimen/text" />


                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_ccv"
                                android:orientation="horizontal"
                                android:padding="14dp">


                                <com.hello.gemp.GoEasyMarketPlace.customfonts.MyEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="#00000000"
                                    android:lines="1"
                                    android:maxLength="5"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:textColor="@color/text"
                                    android:textColorHint="@color/text"
                                    android:textSize="@dimen/text" />


                            </LinearLayout>

                                <com.hello.gemp.GoEasyMarketPlace.customfonts.MyEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="#00000000"
                                    android:inputType="number"
                                    android:lines="1"
                                    android:maxLength="3"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:textColor="@color/text"
                                    android:textColorHint="@color/text"
                                    android:textSize="@dimen/text" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/pay_ll"
                            android:layout_width="match_parent"
                            android:layout_height="78dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="41dp"
                            android:background="@drawable/bg_pay"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="14dp">


                            <com.hello.gemp.GoEasyMarketPlace.customfonts.MyTextView
                                android:id="@+id/total_pay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:text="CONFIRM AND PAY XAF."
                                android:textColor="@color/white"
                                android:textSize="@dimen/text"
                                android:textStyle="bold" />
                        </LinearLayout>


                    </LinearLayout>

                </FrameLayout>

            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>